{
  "name": "@bcgov/common-web-utils",
  "version": "1.0.0",
  "description": "",
  "engine": "node 8.4.0",
  "main": "dist/index.js",
  "contributors": [
    {
      "name": "Jason Leach",
      "email": "jason.leach@fullboar.ca"
    },
    {
      "name": "Patrick Simonian",
      "email": "patrick.simonian@gov.bc.ca"
    }
  ],
  "license": "Apache-2.0",
  "homepage": "https://github.com/bcgov/common-web-utils",
  "engines": {
    "node": "8.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "hash.js": "^1.1.7",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/preset-env": "^7.4.4",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^24.8.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "jest-localstorage-mock": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.14.3"
  },
  "scripts": {
    "build": "babel src --out-dir dist",
    "test": "NODE_ENV=test jest __tests__ --env=jsdom",
    "test:watch": "NODE_ENV=test jest __tests__ --watch --env=jsdom",
    "test:lint": "eslint --env node --ext .js src",
    "prettier": "prettier --write '{./,__{tests,mocks}__}/**/*.+(js|jsx)'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:bcgov/common-web-utils.git"
  },
  "jest": {
    "transform": {
      ".(js|jsx)": "babel-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testRegex": "(\\.(test|spec))\\.(jsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "setupFiles": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
